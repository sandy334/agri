# Deployment Environment Variables Template

# Copy this file to .env.production and fill in your values

# MongoDB Atlas Connection (REQUIRED for production)
MONGODB_URI=mongodb+srv://username:password@cluster0.mongodb.net/?appName=Cluster0
MONGODB_DB=agri

# Google AI API Keys (REQUIRED)
VITE_API_KEY=your_google_ai_api_key_here
GEMINI_API_KEY=your_google_ai_api_key_here

# Database Configuration
USE_LOCAL_DB=false

# Server Configuration
NODE_ENV=production
PORT=4000

# For frontend build
VITE_API_BASE=https://your-app-name.vercel.app